{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "simple-import-sort"
    ],
    "root": true,
    "rules": {
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error",
        "max-len": ["error", { "code": 80 }],
        "quotes": ["error", "double"]
    }
}
